{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "ES2017",
    "skipLibCheck": true,
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./src",
    "./next-env.d.ts",
    "./dist/types/**/*.ts",
    "./dist/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
