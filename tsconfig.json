{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "plugins": [{ "name": "next" }],
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "ignoreDeprecations": "6.0"
  },
  "include": [
    "./src",
    "./next-env.d.ts"
  ]
}